/**
 * Implements hook_culturefeed_ui_profile_box_main_items().
 */
function culturefeed_social_culturefeed_ui_profile_box_main_items() {

  $items = array();
  try {

    $notification_count = DrupalCultureFeed::getNotificationsCount(DrupalCultureFeed::getLoggedInUserId());

    if (isset($notification_count[Culturefeed::NOTIFICATION_TYPE_NEW])) {
      $items['notifications'] = array(
        'data' => l('<span class="badge">' . $notification_count[Culturefeed::NOTIFICATION_TYPE_NEW] . '</span>', 'culturefeed/notifications', array('html' => TRUE)),
        'class' => 'notifications',
        'weight' => -20,
      );

      if ($notification_count[Culturefeed::NOTIFICATION_TYPE_NEW] > 0) {
        $items['notifications']['data'] = l('<span class="badge badge-important">' . $notification_count[Culturefeed::NOTIFICATION_TYPE_NEW] . '</span>', 'culturefeed/notifications', array('html' => TRUE));
        $items['notifications']['class'] .= ' has-new';
      }

    }

  }
  catch (Exception $e) {
    watchdog_exception('culturefeed_social', $e);
  }

  return $items;

}

/**
 * Form to filter on user activities.
 */
function culturefeed_social_user_activity_filter_form($form, $form_state, $active_filter = 'all', $in_block = FALSE, $account = NULL) {

  $form = array();
  $activity_filters = culturefeed_social_get_activity_filter_options(TRUE);
  if (!$activity_filters) {
    return;
  }

  $activity_filters = array('all' => 'Alles') + $activity_filters;
  $form['filter'] = array(
    '#type' => 'select',
    '#options' => $activity_filters,
    '#title' => 'Filter gebeurtenissen op',
    '#default_value' => $active_filter,
  );

  $query = array();
  if ($account) {
    $query['culturefeed_uid'] = $account->culturefeed_uid;
  }

  // If the form is shown in a block. Filtering is done by ajax.
  if ($in_block) {
    $form['filter_url'] = array(
      '#type' => 'hidden',
      '#value' => url('culturefeed/ajax/user/activities', array('query' => $query)),
    );
  }
  else {
    $form['submit'] = array(
      '#type' => 'submit',
      '#value' => 'Filter',
    );
  }

  return $form;

}

/**
 * Submit the user activity filter.
 */
function culturefeed_social_user_activity_filter_form_submit($form, &$form_state) {

  $type = $form_state['values']['filter'];

  if ($type > -1 && $type != 'all') {
    drupal_goto('culturefeed/activities/' . $type);
  }
  else {
    drupal_goto('culturefeed/activities');
  }

}

/**
 * Form to write a recommendation.
 * 
 * @param array $form
 * @param array $form_state
 * @param misc $object (ExtendedEntity of a Culturefeed page, event, book, ...)
 * @param CultureFeed_Activity $activity 
 *   Optional activity if the comment needs to target the activity as parent.
 */
function culturefeed_social_recommendation_form($form, &$form_state, $object, $activity = NULL) {

  $form_state['object'] = $object;
  
  if (!isset($activity)) {
    $activity_content_type = culturefeed_get_content_type($object->getType());
    $nodeId = culturefeed_social_get_activity_node_id($activity_content_type, $object);
    $status = DrupalCultureFeed::getNodeStatus($activity_content_type, $nodeId, DrupalCultureFeed::getLoggedInUserId());
  }
  
  $form = array(
    '#theme' => 'culturefeed_social_recommendation_form'
  );

  $form['recommendation_message'] = array(
    '#type' => 'textarea',
    '#title' => 'Schrijf zelf een beoordeling',
    '#default_value' => '',
    '#attributes' => array('class' => array('recommendation-message')),
    '#weight' => -5,
  );

  if (isset($status) && $status == TRUE) {

    $link = l('Schrijf je uit', 'culturefeed/node/unfollow/' . $object->getType() . '/' . urlencode($object->getId()) . '/nojs');
    $message = format_string('Je ontvangt momenteel updates van nieuwe reacties op deze activiteit.<br />!link om geen berichten meer te ontvangen.',
      array('!link' => $link));
    
    $form['recommendation_updates'] = array(
      '#type' => 'markup',
      '#markup' => $message,
      '#prefix' => '<div id="node-status-wrapper">',
      '#suffix' => '</div>',
    );
  }
  else {
    $form['recommendation_updates'] = array(
      '#type' => 'checkbox',
      '#title' => 'Blijf op de hoogte van nieuwe reacties en beoordelingen over deze activiteit',
      '#default_value' => isset($status) ? $status : TRUE,
      '#attributes' => array('class' => array('recommendation-updates')),
      '#weight' => 1,
    );
  }

  if (isset($activity)) {
    $form['recommendation_parent_id'] = array(
      '#type' => 'hidden',
      '#default_value' => $activity->id,
    );
  }
  
  $form['recommendation_send'] = array(
    '#type' => 'submit',
    '#value' => 'Verzend beoordeling',
    '#attributes' => array('class' => array('recommendation-button')),
    '#weight' => 5,
  );
  
  return $form;
  
}

/**
 * Submit handler to post a written recommendation.
 * 
 * @param array $form
 * @param array $form_state
 */
function culturefeed_social_recommendation_form_submit($form, $form_state) {
  
  $object = $form_state['object'];
  $config = culturefeed_social_activity_get_config(CultureFeed_Activity::TYPE_COMMENT);
  $activity_content_type = culturefeed_get_content_type($object->getType());
  
  $activity = new CultureFeed_Activity();
  $activity->contentType = $activity_content_type;
  $activity->type = $activity::TYPE_COMMENT;
  $activity->nodeId = culturefeed_social_get_activity_node_id($activity_content_type, $object);
  $activity->nodeTitle = $object->getTitle($GLOBALS['language']->language);
  $activity->userId = DrupalCultureFeed::getLoggedInUserId();
  $activity->value = $form_state['values']['recommendation_message'];
  $activity->onBehalfOf = !empty($form_state['values']['recommendation_on_behalf_of']) ? $form_state['values']['recommendation_on_behalf_of']: '';
  
  // Add the parent activity if that's the target.
  if (!empty($form_state['values']['recommendation_parent_id'])) {
    $activity->parentActivity = $form_state['values']['recommendation_parent_id'];
  }
  
  $id = DrupalCultureFeed::createActivity($activity);
  
  $goto_link = l('beoordeling', culturefeed_social_detail_path($object->getType(), $object->getId(), $object->getTitle($GLOBALS['language']->language)), array(
    'absolute' => TRUE,
    'fragment' => 'activity-' . $id,
  ));
  
  drupal_set_message(format_string('Uw !beoordeling is bewaard.', array('!beoordeling' => $goto_link)));

  $nodeId = culturefeed_social_get_activity_node_id($activity_content_type, $object);
  
  if (!empty($form_state['values']['recommendation_updates'])) {
    $id = DrupalCultureFeed::followNode($activity_content_type, $nodeId, DrupalCultureFeed::getLoggedInUserId());
  }
  else {
    $id = DrupalCultureFeed::unFollowNode($activity_content_type, $nodeId, DrupalCultureFeed::getLoggedInUserId());
  }
  if ($id) {
    $link = l('Schrijf je uit', 'culturefeed/node/unfollow/' . $object->getType() . '/' . urlencode($object->getId()) . '/nojs');
    drupal_set_message(format_string('Je ontvangt momenteel updates van nieuwe reacties op deze activiteit.<br />!link om geen berichten meer te ontvangen.', 
      array('!link' => $link)));
  }
}
